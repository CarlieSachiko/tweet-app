<div class="container">
<p id="notice"><%= notice %></p>

<%= image_tag(@tweet.image.url) %>

<div class="panel panel-default">
  <div class="panel-heading">
    @<%= @tweet.handle %> &nbsp; &#183; &nbsp;
    <span><%= @tweet.updated_at.strftime("%b %-d, %Y") %> at <%= @tweet.updated_at.localtime.strftime("%l:%M %P") %></span>
  </div>
  <div class="panel-body">
    <%= @tweet.content %>
  </div>
</div>

<%= link_to 'Edit', edit_tweet_path(@tweet) %> |
<%= link_to 'Back', tweets_path %> |
<%= link_to 'Delete', delete_tweet_path, method: :delete, data: { confirm: 'Are you sure???' } %>


</div>
